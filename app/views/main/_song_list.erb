<div id="song_list" ng-controller="albumSongListController">
  <table id="song_list_table" class="tablesorter">
    <thead>
    <tr>
      <th class='now_playing'>
      </th>
      <th>Disc #</th>
      <th>Track #</th>
      <th>Title</th>
      <th>Artist</th>
      <th>Duration</th>
      <th>Album</th>
      <th>Rating</th>
    </tr>
    </thead>
    <tbody>

    <tr ng-repeat="song in album.songs">
      <td class="now_playing"></td>
      <td>{{ song.disc_number }}</td>
      <td>{{ song.track_number }}</td>
      <td>{{ song.title }}</td>
      <td>{{ song.artist }}</td>
      <td>{{ song.duration }}</td>
      <td>{{ album.title }}</td>
      <td class="rating" data-sort-value="{{ song.rating }}" data-rating="{{ song.rating }}"></td>
    </tr>

    </tbody>
  </table>

</div>
