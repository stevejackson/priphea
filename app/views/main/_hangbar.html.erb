<div id="hangbar" class="row">

  <div id="song_controls" class="four columns">
    <div id="previous_song" class="control">
      <a href="#">
        <i class="fa fa-backward fa-2x"></i>
      </a>
    </div>

    <div id="play_pause_button" class="control">
      <a href="#">
        <i class="fa fa-play fa-2x"></i>
      </a>
    </div>

    <div id="next_song" class="control">
      <a href="#">
        <i class="fa fa-forward fa-2x"></i>
      </a>
    </div>
  </div> <!-- song_controls -->

  <div id="volume" class="four columns">
    <i class="fa fa-volume-down"></i>
    <input id="volume_control" type="range" min="0" max="100" step="1">
    <i class="fa fa-volume-up"></i>
  </div> <!-- volume -->

  <div id="now_playing" class="eight columns">
    <div id="song_art">
      <div id="thumbnail" class="no_art">
      </div>
    </div>

    <span id="song_info">
      <span>&nbsp;</span>
    </span>

    <div id="progress_bar">
      <span id="current_time">00:00</span>
      <progress value="0" max="100"></progress>
      <span id="total_length">00:00</span>
    </div>
  </div> <!-- now_playing -->

  <div id="playback_mode" class="one column">
    <div class="medium primary button">
      <a href="#">
        <i class="fa fa-repeat fa-2x"></i>
      </a>
    </div>
  </div> <!-- playback_mode -->

  <div id="search_area" class="four columns">
    <input type="text" id="search" placeholder="Search for music">
  </div> <!-- search -->

  <div id="settings" class="one column">
    <div class="medium default button">
      <a href="/settings">
        <i class="fa fa-cog fa-2x"></i>
      </a>
    </div>
  </div> <!-- settings -->

</div>
