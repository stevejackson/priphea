<div id="content_area">
  <% if @albums?: %>
    <% for album in @albums.models:  %>
      <% album = album.attributes %>
      <div class="album">
        <div class="cover">
          <a href="#albums/<%= album['id'] %>" data-album-id="<%= album['id'] %>">
            <% if album['has_cover_art']?: %>
              <img src="/cover_art/<%= album['id'] %>" width="250" height='250'>
            <% else: %>
              <div class="no_cover">
              </div>
            <% end %>
          </a>
        </div>

        <div class="album_title">
          <p>
            <%= album.title %>
          </p>
        </div>

      </div>
    <% end %>
  <% end %>
</div> <!-- #content_area -->
